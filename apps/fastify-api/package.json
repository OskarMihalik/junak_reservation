{
  "name": "fastify-api",
  "type": "module",
  "version": "0.0.0",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "pnpm check && esbuild src/main.ts --bundle --format=esm --tsconfig=./tsconfig.json --minify --platform=node --outdir=dist",
    "build:es": "pnpm check && esbuild src/main.ts --bundle --format=esm --tsconfig=tsconfig.json --minify --platform=node --target=es2022 --outdir=dist",
    "build:esbuildconfig": "rm -rf dist && tsx esbuild.ts",
    "build:tsup": "tsup src/index.ts --config tsup.config.ts",
    "build:swc": "rimraf dist && swc src --out-dir dist",
    "build:cli": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "eslint src --config ../../eslint.config.js",
    "check": "tsc --noEmit",
    "test": "vitest",
    "db:migrate:tsnode": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run",
    "db:migrate": "tsx ../../db/migrate.ts",
    "db:seed": "tsx ../../db/seed.ts"
  },
  "dependencies": {
    "@fastify/autoload": "~5.8.3",
    "@fastify/sensible": "~5.6.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@roarr/cli": "^5.12.4",
    "@ts-rest/core": "^3.45.2",
    "@ts-rest/fastify": "^3.45.2",
    "@ts-rest/open-api": "^3.45.2",
    "@workspace/common": "workspace:*",
    "@workspace/contracts": "workspace:*",
    "fastify-plugin": "~4.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/swagger-ui-react": "^4.18.3",
    "fastify-tsconfig": "^2.0.0",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5"
  }
}
